<%= form_for @menu do |f| %>
<% if @menu.errors.any? %>
  <div>
    <h2>
      Please fix the following errors:
    </h2>
    <ul>
      <% @menu.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<p>
  to see all your menus <%= link_to 'click here', menus_path() %>  
</p>
<p>
  <%= f.label :new_menu %><br>
  <%= f.text_field :new_menu %>
</p>

<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>
